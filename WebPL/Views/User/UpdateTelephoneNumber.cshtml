@model Entities.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Изменение номера телефона</h3>
@using (Html.BeginForm())
{
    <p>Старый номер телефона: @TempData.Peek("TelephoneNumber")</p>
    <p>@Html.ValidationMessageFor(m => m.TelephoneNumber)</p>
    <p>Новый номер телефона: @Html.EditorFor(m => m.TelephoneNumber)</p>
    <input type="submit" value="Cохранить изменения" />
}
